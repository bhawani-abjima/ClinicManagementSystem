@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html>
<head>
    <title>Centered Box</title>
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .box {
            width: 300px;
            height: 200px;
            background-color: lightgray;
            border-radius: 5px;
            padding: 20px;
            text-align: center;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px; /* Add margin at the bottom */
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="box">
            <h2>Centered Box</h2>
            <p>This box is centered in the middle of the webpage.</p>
        </div>
    </div>
</body>
</html>


