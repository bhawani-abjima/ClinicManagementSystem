@{
}
@model List<ClinicManagementSystem.Models.BookAppointment>

@{
    ViewData["Title"] = "Appointment Details";
}

<div class="card">
    <div class="card-header">
        <h5 class="card-title">Appointment Details</h5>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Count > 0)
        {
            @foreach (var appointment in Model)
            {
                <div class="card">
                    <div class="card-body">
                        <p><strong>DoctorEmail:</strong> @appointment.DoctorEmail</p>
                        <p><strong>Appointment Date:</strong> @appointment.AppointmentDate.ToShortDateString()</p>
                        <p><strong>Appointment Time:</strong> @appointment.AppointmentTime</p>

                        <p><strong>Patient Email:</strong> @appointment.PatientEmail</p>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No appointments found.</p>
        }
    </div>
</div>
