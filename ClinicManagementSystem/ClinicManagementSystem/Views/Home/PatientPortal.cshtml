@model ClinicManagementSystem.Models.PatientModel

@{
    ViewData["Title"] = "Patient Portal";
}

<style>
    .patient-detail {
        color: blue;
    }

    .patient-name {
        color: red;
    }

    .green-button {
        background-color: green;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .full-width-card {
        width: 100%;
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .two-column-layout {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
        font-size: 16px;
    }

</style>

<div class="card full-width-card">
    <div class="card-header">
        <h5 class="card-title">Patient Details</h5>
        <li class="nav-item">
           @* <a class="nav-link text-dark" asp-area="" asp-controller="PatientAppointmentDetails" asp-action="PatientAppoinements">My Appointment
            </a>*@
            <a href="@Url.Action("PatientAppoinements", "PatientAppointmentDetails", new { Email = Model.Email })" class="btn btn-success">My Appointment</a>
        </li>
    </div>
    <div class="card-body">
        <div class="two-column-layout">
            <p><strong>First Name:</strong> @Model.PatientFirstName</p>
            <p><strong>Last Name:</strong> @Model.PatientLastName</p>
            <p><strong>Age:</strong> @Model.Age</p>
            <p><strong>Gender:</strong> @Model.Gender</p>
            <p><strong>Phone No:</strong> @Model.PhoneNo</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Marital Status:</strong> @Model.MartialStatus</p>
            <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToShortDateString()</p>
            <p><strong>City:</strong> @Model.City</p>
            <p><strong>State:</strong> @Model.State</p>
            <p><strong>Address:</strong> @Model.Address</p>
            <p><strong>Height:</strong> @Model.Height</p>
            <p><strong>Weight:</strong> @Model.Weight</p>
            <p><strong>Disease Brief:</strong> @Model.DiseaseBrief</p>
        </div>
    </div>
</div>
