@model ClinicManagementSystem.Models.PatientLoginModel

@{
    ViewBag.Title = "Patient Login Portal";
}



<div class="row justify-content-md-center">
    <div class="col-md-5">
        @using (Html.BeginForm("PatientRegistration", "Patient", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="card">
                <div class="card-header">
                    <div class="card-title">Patient Details</div>
                </div>
                <div class="card-body">
                   
                    <div class="form-group">
                        @Html.LabelFor(m => m.PhoneNo, "PhoneNo")
                        @Html.TextBoxFor(m => m.PhoneNo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.PhoneNo, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, "Email")
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                  
                    <div class="form-group">
                        <input type="submit" name="Login" class="btn btn-danger" value="Patient Profile" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
