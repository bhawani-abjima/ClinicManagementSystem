@model ClinicManagementSystem.Models.PatientModel
@{
    ViewBag.Title = "Welcome to Admin Portal";
}

@Html.Raw(TempData["AlertMessage"])

<head>
    <style>
        .modal {
            display: none;
            align-items: center;
            justify-content: center;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.4);
        }

        .modal-content {

            background-color: #fefefe;
            padding: 20px;
            border: 1px solid #888;
            width: 60%;
            max-width: 600px;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

            .close:hover,
            .close:focus {
                color: black;
                text-decoration: none;
                cursor: pointer;
            }

        .save-button {
            background-color: blue;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            font-size: 16px;
        }
    </style>
</head>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card text-center">
                <div class="card-header">
                    <h1>Welcome to the Admin portal</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-between mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body  d-flex justify-content-center">
                    <button class="btn btn-outline-info btn-lg" onclick="location.href='@Url.Action("PatientRegistration", "Home")'">
                        <b>Patient Registration</b>
                    </button>
                </div>
                <div class="card-body  d-flex justify-content-center">
                    <button class="btn btn-outline-secondary btn-lg" onclick="location.href='@Url.Action("DoctorRegistration", "Home")'">
                        <b>Doctor Registration</b>
                    </button>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body d-flex justify-content-center">
                    <button class="btn btn-outline-success btn-lg" onclick="location.href='@Url.Action("GetAllAppointments", "Appointments")'">
                        <b>Appointment Details</b>
                    </button>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body d-flex justify-content-center">
                    <button id="editPatientBtn" class="btn btn-outline-success btn-lg">
                        <b>Edit Patient Details</b>
                    </button>
                </div>
                <form id="patientEmailForm" method="post" action="@Url.Action("Patientdetailseditoption", "EditPatientDetails")">
                    <div id="patientModal" class="modal">
                        <div class="modal-content">
                            <span class="close" onclick="closeModal()">&times;</span>
                            <h5>Enter Patient Email</h5>
                            <input type="email" id="patientEmail" name="patientEmail" placeholder="Enter email">
                            <br><br>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
                <script>
                    var modal = document.getElementById("patientModal");
                    var editPatientBtn = document.getElementById("editPatientBtn");

                    editPatientBtn.addEventListener("click", function () {
                        modal.style.display = "block";
                    });

                    function closeModal() {
                        modal.style.display = "none";
                    }
                </script>
                <div class="card-body d-flex justify-content-center">
                    <button id="editDoctorBtn" class="btn btn-outline-success btn-lg">
                        <b>Edit Doctor Details</b>
                    </button>
                </div>
                <form id="doctorEmailForm" method="post" action="@Url.Action("DoctorDetailsEditOption", "EditDoctorDetails")">
                    <div id="doctorModal" class="modal">
                        <div class="modal-content">
                            <span class="close" onclick="closeModal()">&times;</span>
                            <h5>Enter Doctor Email</h5>
                            <input type="email" id="doctorEmail" name="doctorEmail" placeholder="Enter email">
                            <br><br>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
                <script>
                    var doctorModal = document.getElementById("doctorModal");
                    var editDoctorBtn = document.getElementById("editDoctorBtn");

                    editDoctorBtn.addEventListener("click", function () {
                        doctorModal.style.display = "block";
                    });

                    function closeModal() {
                        doctorModal.style.display = "none";
                    }
                </script>
            </div>
        </div>
    </div>
</div>
