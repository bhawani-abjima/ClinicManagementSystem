@model ClinicManagementSystem.Models.PatientModel
@{
    ViewBag.Title = "Welcome to Admin Portal";
}

@Html.Raw(TempData["AlertMessage"])
  
<head>
    <style>
        .button-color{
            background-color:white;
            border:2px solid grey;
            border-radius:10px;
            
            width:300px;
            height:80px;
            font-size:20px;
        }
    </style>
    
</head>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card text-center">
                <div class="card-header" style="background-color:white;  border:0.5px solid grey;">
                    <h1>Welcome to Admin Dashboard</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-between mt-4">
        <div class="col-md-4" ">
            <div class="card" @*style="background: linear-gradient(to top right, #00ffff 0%, #ffffff 62%);*@">
                <div class="card-body  d-flex justify-content-center">
                    <button class="button-color" onclick="location.href='@Url.Action("PatientRegistration", "Home")'">
                        <b>Patient Registration</b>
                    </button>
                </div>
                <div class="card-body d-flex justify-content-center">
                    <button id="editPatientBtn" class="button-color" ">
                        <b>Edit Patient Details</b>
                    </button>
                </div>
                <form id="patientEmailForm" method="post" action="@Url.Action("Patientdetailseditoption", "EditPatientDetails")">
                    <div id="patientModal" class="modal">
                        <div class="modal-content">
                            <span class="close" onclick="closeModal()">&times;</span>
                            <h5>Enter Patient Email</h5>
                            <input type="email" id="patientEmail" name="patientEmail" placeholder="Enter email">
                            <br><br>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
                <script>
                    var modal = document.getElementById("patientModal");
                    var editPatientBtn = document.getElementById("editPatientBtn");

                    editPatientBtn.addEventListener("click", function () {
                        modal.style.display = "block";
                    });

                    function closeModal() {
                        modal.style.display = "none";
                    }
                </script>




                
            </div>
        </div>
        <div class="col-md-4">
            <div class="card" @*style="background: linear-gradient(to bottom, #00ffff 0%, #ffffff 62%)*@;">
                <div class="card-body d-flex justify-content-center">
                    <button class=" button-color" onclick="location.href='@Url.Action("GetAllAppointments", "Appointments")'">
                        <b>Appointment Details</b>
                    </button>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card" @*style="background: linear-gradient(to top left, #00ffff 0%, #ffffff 62%);*@">
                <div class="card-body  d-flex justify-content-center">
                    <button class=" button-color" onclick="location.href='@Url.Action("DoctorRegistration", "Home")'">
                        <b>Doctor Registration</b>
                    </button>
                </div>
                <div class="card-body d-flex justify-content-center">
                    <button id="editDoctorBtn" class="button-color" >
                        <b>Edit Doctor Details</b>
                    </button>
                </div>
                <form id="doctorEmailForm" method="post" action="@Url.Action("DoctorDetailsEditOption", "EditDoctorDetails")">
                    <div id="doctorModal" class="modal">
                        <div class="modal-content">
                            <span class="close" onclick="closeModal()">&times;</span>
                            <h5>Enter Doctor Email</h5>
                            <input type="email" id="doctorEmail" name="doctorEmail" placeholder="Enter email">
                            <br><br>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
                <script>
                    var doctorModal = document.getElementById("doctorModal");
                    var editDoctorBtn = document.getElementById("editDoctorBtn");

                    editDoctorBtn.addEventListener("click", function () {
                        doctorModal.style.display = "block";
                    });

                    function closeModal() {
                        doctorModal.style.display = "none";
                    }
                </script>
            </div>
        </div>
    </div>
</div>
