@model ClinicManagementSystem.Models.PatientModel

@{
    ViewData["Title"] = "PatientRegistration";
}
<style>
    .form-container {
        background-color: aliceblue;
        padding: 20px;
        width: 70%;
        margin: 0 auto;
    }
</style>
<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title" style="text-align:center;"><b><h5>Patient Registration</h5></b></div>
                </div>
                <div class="card-body">
                    <div class="form-container">
                        <form asp-action="PatientRegistration" asp-controller="PatientRegistration" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <table class="table">
                                <tr>
                                    <td><label asp-for="PatientFirstName" class="control-label" style="font-weight:bold;"></label></td>
                                    <td><input asp-for="PatientFirstName" class="form-control" /></td>
                                    <td><span asp-validation-for="PatientFirstName" class="text-danger"></span></td>
                                    <td><label asp-for="PatientLastName" class="control-label" style="font-weight:bold;"></label></td>
                                    <td><input asp-for="PatientLastName" class="form-control" /></td>
                                    <td><span asp-validation-for="PatientLastName" class="text-danger"></span></td>
                                </tr>
                                <tr>
                                    <td><label asp-for="Age" class="control-label" style="font-weight:bold;"></label></td>
                                    <td><input asp-for="Age" class="form-control" /></td>
                                    <td><span asp-validation-for="Age" class="text-danger"></span></td>
                                    <td><label asp-for="Gender" class="control-label" style="font-weight:bold;"></label></td>
                                    <td>
                                        <select asp-for="Gender" class="form-control">
                                            <option value="">Select Gender</option>
                                            <option value="Male">Male</option>
                                            <option value="Female">Female</option>
                                            <option value="Other">Other</option>
                                        </select>
                                    </td>
                                    <td><span asp-validation-for="Gender" class="text-danger"></span></td>
                                </tr>
                                <tr>
                                    <td><label asp-for="PhoneNo" class="control-label" style="font-weight:bold;"></label></td>
                                    <td><input asp-for="PhoneNo" class="form-control" /></td>
                                    <td><span asp-validation-for="PhoneNo" class="text-danger"></span></td>
                                    <td><label asp-for="Email" class="control-label" style="font-weight:bold;"></label></td>
                                    <td><input asp-for="Email" class="form-control" /></td>
                                    <td><span asp-validation-for="Email" class="text-danger"></span></td>
                                </tr>
                                <tr>
                                    <td><label asp-for="MartialStatus" class="control-label" style="font-weight:bold;"></label></td>
                                    <td>
                                        <select asp-for="MartialStatus" class="form-control">
                                            <option value="">Select Martial Status</option>
                                            <option value="Married">Married</option>
                                            <option value="Widowed">Widowed</option>
                                            <option value="Separated">Separated</option>
                                            <option value="Divorced">Divorced</option>
                                            <option value="Single">Single</option>
                                        </select>
                                    </td>
                                    <td><span asp-validation-for="MartialStatus" class="text-danger"></span></td>
                                    <td><label asp-for="DateOfBirth" class="control-label" style="font-weight:bold;">Date of Birth</label></td>
                                    <td><input type="date" asp-for="DateOfBirth" class="form-control" /></td>
                                    <td><span asp-validation-for="DateOfBirth" class="text-danger"></span></td>
                                </tr>
                                <tr>
                                    <td><label asp-for="City" class="control-label" style="font-weight:bold;"></label></td>
                                    <td>
                                        <select asp-for="City" class="form-control">
                                            <option value="">Select City</option>
                                            <option value="Mumbai">Mumbai</option>
                                            <option value="Delhi">Delhi</option>
                                            <option value="Bangalore">Bangalore</option>
                                            <option value="Hyderabad">Hyderabad</option>
                                            <option value="Ahmedabad">Ahmedabad</option>
                                            <option value="Chennai">Chennai</option>
                                            <option value="Kolkata">Kolkata</option>
                                            <option value="Surat">Surat</option>
                                            <option value="Pune">Pune</option>
                                            <option value="Jaipur">Jaipur</option>
                                        </select>
                                    </td>
                                    <td><span asp-validation-for="City" class="text-danger"></span></td>
                                    <td><label asp-for="State" class="control-label" style="font-weight:bold;"></label></td>
                                    <td>
                                        <select asp-for="State" class="form-control">
                                            <option value="">Select State</option>
                                            <option value="Maharashtra">Maharashtra</option>
                                            <option value="Delhi">Delhi</option>
                                            <option value="Karnataka">Karnataka</option>
                                            <option value="Telangana">Telangana</option>
                                            <option value="Gujarat">Gujarat</option>
                                            <option value="Tamil Nadu">Tamil Nadu</option>
                                            <option value="West Bengal">West Bengal</option>
                                            <option value="Rajasthan">Rajasthan</option>
                                        </select>
                                    </td>
                                    <td><span asp-validation-for="State" class="text-danger"></span></td>
                                </tr>
                                <tr>
                                    <td><label for="Address" class="control-label" style="font-weight:bold;">Address</label></td>
                                    <td colspan="5">
                                        <input type="text" id="Address" name="Address" class="form-control" />
                                        <span class="text-danger"></span>
                                        <div class="text-muted">
                                            Provide full address with House No Landmark.
                                        </div>
                                    </td>
                                </tr>

                                <td><label asp-for="Height" class="control-label" style="font-weight:bold;"></label></td>
                                    <td>
                                        <select asp-for="Height" class="form-control">
                                            <option value="">Select Height</option>
                                            @for (int feet = 3; feet <= 7; feet++)
                                            {
                                                for (int inches = 0; inches <= 11; inches++)
                                                {
                                                    int totalInches = (feet * 12) + inches;
                                                    int centimeters = (int)(totalInches * 2.54);
                                                    <option value="@totalInches">@(feet) ft @(inches) in / @(centimeters) cm</option>
                                                }
                                            }
                                        </select>
                                    </td>
                                <td><span asp-validation-for="Height" class="text-danger"></span></td>
                                <td><label asp-for="Weight" class="control-label" style="font-weight:bold;"></label></td>
                                    <td>
                                        <select asp-for="Weight" class="form-control">
                                            <option value="">Select Weight</option>
                                            @for (int weight = 1; weight <= 100; weight++)
                                            {
                                                <option value="@weight">@weight kg </option>
                                            }
                                        </select>
                                    </td>
                                    <td><span asp-validation-for="Weight" class="text-danger"></span></td>
                                </tr>
                                <tr>
                                    <td><label asp-for="DiseaseBrief" class="control-label" style="font-weight:bold;"></label></td>
                                    <td colspan="5">
                                        <textarea asp-for="DiseaseBrief" class="form-control"></textarea>
                                        <span asp-validation-for="DiseaseBrief" class="text-danger"></span>
                                        <div class="text-muted">
                                            Provide a brief description of the disease or condition. Also provide disease history.
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="6" style="text-align: center;">
                                        <input type="submit" value="Submit" class="btn btn-primary" />
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
    </div>

  