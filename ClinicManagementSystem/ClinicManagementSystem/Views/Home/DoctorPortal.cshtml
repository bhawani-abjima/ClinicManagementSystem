@model ClinicManagementSystem.Models.DoctorModel
@{
    ViewData["Title"] = "Doctor Details";
}

<style>
    .form-group label {
        font-weight: bold;
        color: black;
    }

    .form-group {
        color: blue;
    }

    .form-head {
        color: red;
        font-weight: bold;
    }

    .navbar {
        margin-bottom: 0;
    }

    .sidebar {
        position: fixed;
        top: 70px; /* Adjust this value to match the height of your navbar */
        left: 0;
        width: 30%;
        height: 100%;
        background-color: #f8f9fa;
        padding: 15px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .content {
        margin-left: 20%;
        padding: 15px;
    }

    .doctor-name {
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 10px;
    }
</style>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <!-- Navbar content -->
</nav>

<div class="container">
    <div class="row">
        <div class="sidebar">
            <div class="card">
                <div class="card-header">
                    <div class="card-title"><span class="doctor-name">@Model.DoctorFirstName @Model.DoctorLastName</span></div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label><b>Registration Number:</b></label>
                        <span class="form-head">@Model.RegistrationNo</span>
                    </div>
                    <div class="form-group">
                        <label>First Name:</label>
                        <span>@Model.DoctorFirstName</span>
                    </div>
                    <div class="form-group">
                        <label>Last Name:</label>
                        <span>@Model.DoctorLastName</span>
                    </div>
                    <div class="form-group">
                        <label>Email:</label>
                        <span>@Model.Email</span>
                    </div>
                    <div class="form-group">
                        <label>Specialities:</label>
                        <span>@Model.Specialities</span>
                    </div>
                    <div class="form-group">
                        <label>Experience:</label>
                        <span>@Model.Experience</span>
                    </div>
                    <div class="form-group">
                        <label>Education:</label>
                        <span>@Model.Education</span>
                    </div>
                    <div class="form-group">
                        <label>Fees:</label>
                        <span>@Model.Fees</span>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-action="EditProfile">Edit Profile</a>
                </div>
            </div>
        </div>
        <div class="content">
            <!-- Your main content here -->
        </div>
    </div>
</div>
