@model ClinicManagementSystem.Models.DoctorModel

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>

        .form-group label {
            font-weight: bold;
            color: black;
        }

        .form-group {
            color: blue;
        }

        .form-head {
            color: red;
            font-weight: bold;
        }

        .navbar {
            margin-bottom: 0;
        }

        .sidebar {
            position: absolute;
            top: 70px;
            left: 0;
            width: 25%;
            height: 100%;
            background-color: lightblue;
            padding: 15px;
            border: 2px solid double;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .content {
            margin-left: 30%;
            padding: 15px;
        }

        .doctor-name {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .img {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-left: 100px;
            width: 100px;
            height: 100px;
        }

        .appointmentbox {
            position: absolute;
            top: 70px;
            right: 0;
            width: 75%;
            height: 100%;
            background-color: lightblue;
            border: 2px solid double;
            padding: 15px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .appointmentheader {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .appointmentbox-title {
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
            border-radius: 5px;
            background-color: #f8f9fa;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 10px;
        }

    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">

    </nav>

    <div class="container">
        <div class="row">
            <div class="sidebar col-md-3">
                <div class="card">
                    <div class="card-header">

                        <div class="card-title">
                            <img src="https://i.pinimg.com/originals/64/34/d7/6434d72ce9e16251c4f41f4e5a146567.png" class="img" alt="Sample Image" class="card-image">
                            <span class="doctor-name">
                                @Model.DoctorName
                            </span>
                        </div>
                    </div>
                    <div class="card-header">

                        <div class="card-title">

                            <label><b>Registration Number:</b></label>
                            <span class="form-head">@Model.RegistrationNo</span>

                        </div>
                    </div>
                    <div class="card-body">

                        <div class="form-group">
                            <label>Email:</label>
                            <span>@Model.Email</span>
                        </div>
                        <div class="form-group">
                            <label>Specialities:</label>
                            <span>@Model.Specialities</span>
                        </div>
                        <div class="form-group">
                            <label>Experience:</label>
                            <span>@Model.Experience</span>
                        </div>
                        <div class="form-group">
                            <label>Education:</label>
                            <span>@Model.Education</span>
                        </div>
                        <div class="form-group">
                            <label>Fees:</label>
                            <span>@Model.Fees</span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a asp-action="EditProfile">Edit Profile</a>
                    </div>
                </div>
            </div>
            <div class="content col-md-9">
                <div class="appointmentbox">
                    <div class="appointmentbox-header">
                        <div class="appointmentbox-title">
                            <h4>Appointment Details</h4>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <table>
                                    <tr>
                                        <th>Patient Email</th>
                                        <td>@Model.PatientEmail</td>
                                    </tr>
                                    <tr>
                                        <th>Appointment Date</th>
                                        <td>@Model.AppointmentDate</td>
                                    </tr>
                                    <tr>
                                        <th>Appointment Time</th>
                                        <td>@Model.AppointmentTime</td>
                                    </tr>
                                    <tr>
                                        <th>Disease Brief</th>
                                        <td>@Model.DiseaseBrief</td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>


</body>
</html>