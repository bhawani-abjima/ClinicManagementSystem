@model ClinicManagementSystem.Models.DoctorModel

@{
    ViewBag.Title = "Login Doctor";
}
<head>
    <style>
       
        body {
            background-image: url('https://img.freepik.com/free-vector/medical-healthcare-blue-color_1017-26807.jpg?w=1060&t=st=1688727612~exp=1688728212~hmac=105f48e0024b044be79bd80c9bf543df638d1f2957926d76337b524b38cc0309');
        }
  
    </style>
</head>
<div class="row justify-content-md-center">
    <div class="col-md-5">
        <form action="/Doctor/DoctorLoginPortal" method="post">
            <input name="__RequestVerificationToken" type="hidden" value="your_verification_token_here" />

            <div class="card">
                <div class="card-header">
                    <div class="card-title"><b>Login</b></div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="RegistrationNo">Registration No</label>
                        <input type="text" name="RegistrationNo" id="RegistrationNo" class="form-control" required />
                        <span class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 col-4 mx-auto">
                        <input type="submit" name="Profile" class="btn btn-danger" value="RegistrationNo" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
